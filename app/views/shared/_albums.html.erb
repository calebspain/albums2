<div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
      <% @albums.each do |album| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
          <div>
            <%= image_tag("#{RSpotify::Album.search(album.name).first.images[0]['url']}", {:style => "width:100%;"}) %>
          </div>
            <div class="card-body">
              <p class="card-text"><strong>Artist: </strong><%= RSpotify::Album.search(album.name).first.artists[0].name %></p>
              <p class="card-text"><strong>Album: </strong><%= RSpotify::Album.search(album.name).first.name %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', album %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_album_path(album) %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                </div>
              </div>
              <hr>
              <small class="text-muted"><%= RSpotify::Album.search(album.name).first.copyrights[0]['text'] %></small>
            </div>
          </div>
        </div>

        <% end %>
        
      </div>
    </div>
  </div>